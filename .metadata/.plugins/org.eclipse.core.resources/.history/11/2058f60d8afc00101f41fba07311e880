package com.revworkforce.ui;

import java.util.Scanner;

import com.revworkforce.model.Employee;

public class EmployeeMenuUI {

    public static void showMenu(Employee emp) {

        Scanner sc = new Scanner(System.in);

        while (true) {

            System.out.println("\n--- Employee Menu ---");
            System.out.println("1. View Profile");
            System.out.println("2. Edit Profile");
            System.out.println("3. Leave Management");
            System.out.println("4. Performance Management");
            System.out.println("5. Logout");
            System.out.print("Choose option: ");

            int choice = sc.nextInt();

            switch (choice) {

                case 1:
                    ProfileUI.viewProfile(emp);
                    break;

                case 2:
                    ProfileUI.editProfile(emp);
                    break;

                case 3:
                    LeaveUI.showMenu(emp, false);
                    break;

                case 4:
                    PerformanceUI.submitReview(emp);
                    break;

                case 5:
                    System.out.println("Logged out");
                    return;

                default:
                    System.out.println("Invalid option");
            }
        }
    }
}
