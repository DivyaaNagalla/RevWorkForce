package com.revworkforce.ui;

import java.util.Scanner;

import com.revworkforce.service.EmployeeService;
import com.revworkforce.service.NotificationService;

public class AdditionalDetailsUI {

    public static void showMenu(int empId) {

        Scanner sc = new Scanner(System.in);
        EmployeeService empService = new EmployeeService();
        NotificationService notifService = new NotificationService();

        while (true) {

            System.out.println("\n--- Additional Details ---");
            System.out.println("1. View Notifications");
            System.out.println("2. Upcoming Birthdays");
            System.out.println("3. Work Anniversaries");
            System.out.println("4. Employee Directory");
            System.out.println("5. Back");
            System.out.print("Choose option: ");

            int choice = sc.nextInt();
            sc.nextLine();

            try {
                switch (choice) {

                    case 1:
                        notifService.viewNotifications(empId);
                        pause(sc);
                        break;

                    case 2:
                        empService.viewBirthdays();
                        pause(sc);
                        break;

                    case 3:
                        empService.viewAnniversaries();
                        pause(sc);
                        break;

                    case 4:
                        empService.viewEmployeeDirectory();
                        pause(sc);
                        break;

                    case 5:
                        return;

                    default:
                        System.out.println("Invalid choice");
                        pause(sc);
                }
            } catch (Exception e) {
                System.out.println("Error: " + e.getMessage());
                pause(sc);
            }
        }
    }

    private static void pause(Scanner sc) {
        System.out.println("\nPress Enter to continue...");
        sc.nextLine();
    }
}
