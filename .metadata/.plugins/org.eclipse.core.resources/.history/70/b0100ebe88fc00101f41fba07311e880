package com.revworkforce.ui;

import java.util.Scanner;
import com.revworkforce.model.Employee;
import com.revworkforce.service.LeaveService;

public class LeaveUI {

    public static void viewLeaveBalance(Employee emp) {
        new LeaveService().viewLeaveBalance(emp.getEmpId());
    }

    public static void applyLeave(Employee emp) {

        Scanner sc = new Scanner(System.in);
        LeaveService service = new LeaveService();

        System.out.print("Leave Type (CL/SL/PL): ");
        String type = sc.nextLine().toUpperCase();

        System.out.print("From Date (YYYY-MM-DD): ");
        String from = sc.nextLine();

        System.out.print("To Date (YYYY-MM-DD): ");
        String to = sc.nextLine();

        System.out.print("Reason: ");
        String reason = sc.nextLine();

        try {
            service.applyLeave(emp.getEmpId(), type, from, to, reason);
            System.out.println("Leave applied successfully");
        } catch (Exception e) {
            System.out.println(e.getMessage());
        }
    }

    public static void viewMyLeaves(Employee emp) {
        new LeaveService().viewMyLeaves(emp.getEmpId());
    }

    public static void viewHolidays() {
        new LeaveService().viewHolidays();
    }
}
