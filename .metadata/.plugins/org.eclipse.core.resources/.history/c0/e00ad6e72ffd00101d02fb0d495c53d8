package com.revworkforce.ui;

import java.util.Scanner;
import com.revworkforce.model.Employee;
import com.revworkforce.service.PerformanceService;

public class PerformanceUI {

    public static void showMenu(Employee emp) {

        Scanner sc = new Scanner(System.in);
        PerformanceService service = new PerformanceService();

        while (true) {
            System.out.println("\n--- Performance Management ---");
            System.out.println("1. Create Performance Review");
            System.out.println("2. View My Goals");
            System.out.println("3. Update Goal Progress");
            System.out.println("4. View Manager Feedback");
            System.out.println("5. Back");
            System.out.print("Choose option: ");

            int ch = sc.nextInt();
            sc.nextLine();

            try {
                switch (ch) {
                    case 1:
                        System.out.print("Review Year: ");
                        int year = sc.nextInt();
                        sc.nextLine();

                        System.out.print("Key Deliverables: ");
                        String kd = sc.nextLine();

                        System.out.print("Achievements: ");
                        String ach = sc.nextLine();

                        System.out.print("Improvements: ");
                        String imp = sc.nextLine();

                        System.out.print("Self Rating (1-5): ");
                        int rating = sc.nextInt();

                        service.submitReview(
                            emp.getEmpId(), year, kd, ach, imp, rating
                        );
                        break;

                    case 2:
                        service.viewMyGoals(emp.getEmpId());
                        break;

                    case 3:
                        System.out.print("Goal ID: ");
                        int gid = sc.nextInt();
                        sc.nextLine();

                        System.out.print("Progress (%): ");
                        int prog = sc.nextInt();

                        service.updateGoalProgress(gid, prog);
                        break;

                    case 4:
                        service.viewManagerFeedback(emp.getEmpId());
                        break;

                    case 5:
                        return;

                    default:
                        System.out.println("Invalid option");
                }
            } catch (Exception e) {
                System.out.println("Error: " + e.getMessage());
            }

            System.out.println("\nPress Enter to continue...");
            sc.nextLine();
        }
    }
}
