package com.revworkforce.service;

import com.revworkforce.dao.PerformanceDAO;

public class PerformanceService {

    private PerformanceDAO dao = new PerformanceDAO();
    public int submitReview(int empId,
                            int reviewYear,
                            String deliverables,
                            String accomplishments,
                            String improvements,
                            int selfRating) throws Exception {

        if (selfRating < 1 || selfRating > 5) {
            throw new Exception("Self rating must be between 1 and 5");
        }

        if (deliverables == null || deliverables.trim().isEmpty()) {
            throw new Exception("Deliverables cannot be empty");
        }

        if (accomplishments == null || accomplishments.trim().isEmpty()) {
            throw new Exception("Accomplishments cannot be empty");
        }

        if (improvements == null || improvements.trim().isEmpty()) {
            throw new Exception("Improvements cannot be empty");
        }

        return dao.createReview(
                empId,
                reviewYear,
                deliverables,
                accomplishments,
                improvements,
                selfRating
        );
    }
    public void addGoal(int reviewId,
                        String description,
                        String priority,
                        String successMetric) throws Exception {

        if (!priority.matches("HIGH|MEDIUM|LOW")) {
            throw new Exception("Priority must be HIGH / MEDIUM / LOW");
        }

        dao.addGoal(reviewId, description, priority, successMetric);
    }
    public void updateGoalProgress(int goalId, int progress) throws Exception {

        if (progress < 0 || progress > 100) {
            throw new Exception("Progress must be between 0 and 100");
        }

        dao.updateGoalProgress(goalId, progress);
    }

    public void managerReview(int reviewId,
                              String feedback,
                              int rating) throws Exception {

        if (rating < 1 || rating > 5) {
            throw new Exception("Manager rating must be between 1 and 5");
        }

        dao.managerFeedback(reviewId, feedback, rating);
    }
}
