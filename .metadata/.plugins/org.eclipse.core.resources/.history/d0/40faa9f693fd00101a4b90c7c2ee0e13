package com.revworkforce.dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.revworkforce.util.DBUtil;

public class PerformanceDAO {

    public void createReview(int empId,
                             int year,
                             String deliverables,
                             String achievements,
                             String improvement,
                             int rating) throws Exception {

        String sql =
            "INSERT INTO PERFORMANCE_REVIEW " +
            "(REVIEW_ID, EMP_ID, REVIEW_YEAR, KEY_DELIVERABLES, " +
            "ACCOMPLISHMENTS, AREAS_OF_IMPROVEMENT, SELF_RATING, STATUS) " +
            "VALUES (REVIEW_SEQ.NEXTVAL, ?, ?, ?, ?, ?, ?, 'SUBMITTED')";

        PreparedStatement ps =
            DBUtil.getConnection().prepareStatement(sql);

        ps.setInt(1, empId);
        ps.setInt(2, year);
        ps.setString(3, deliverables);
        ps.setString(4, achievements);
        ps.setString(5, improvement);
        ps.setInt(6, rating);

        ps.executeUpdate();
    }

    public void viewMyReviews(int empId) throws Exception {

        String sql =
            "SELECT REVIEW_YEAR, SELF_RATING, STATUS " +
            "FROM PERFORMANCE_REVIEW " +
            "WHERE EMP_ID = ? " +
            "ORDER BY REVIEW_YEAR DESC";

        PreparedStatement ps =
            DBUtil.getConnection().prepareStatement(sql);

        ps.setInt(1, empId);

        ResultSet rs = ps.executeQuery();

        boolean found = false;
        System.out.println("\n--- My Performance Reviews ---");

        while (rs.next()) {
            found = true;
            System.out.println(
                "Year: " + rs.getInt("REVIEW_YEAR") +
                " | Rating: " + rs.getInt("SELF_RATING") +
                " | Status: " + rs.getString("STATUS")
            );
        }

        if (!found) {
            System.out.println("No performance reviews found");
        }
    }
}
