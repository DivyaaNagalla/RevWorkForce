package com.revworkforce.dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Date;
import com.revworkforce.util.DBUtil;

public class PerformanceDAO {

    public void createReview(int empId, int year,
                             String del, String acc,
                             String imp, int rating) throws Exception {

        String sql =
            "INSERT INTO PERFORMANCE_REVIEW " +
            "(REVIEW_ID, EMP_ID, REVIEW_YEAR, KEY_DELIVERABLES, " +
            "ACCOMPLISHMENTS, IMPROVEMENTS, SELF_RATING, STATUS) " +
            "VALUES (REVIEW_SEQ.NEXTVAL, ?, ?, ?, ?, ?, ?, 'SUBMITTED')";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);
        ps.setInt(2, year);
        ps.setString(3, del);
        ps.setString(4, acc);
        ps.setString(5, imp);
        ps.setInt(6, rating);
        ps.executeUpdate();
    }

    public void viewMyReviews(int empId) throws Exception {
        String sql =
            "SELECT REVIEW_ID, REVIEW_YEAR, SELF_RATING, STATUS " +
            "FROM PERFORMANCE_REVIEW WHERE EMP_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);
        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- My Reviews ---");
        while (rs.next()) {
            System.out.println(
                rs.getInt("REVIEW_ID") + " | " +
                rs.getInt("REVIEW_YEAR") + " | " +
                rs.getInt("SELF_RATING") + " | " +
                rs.getString("STATUS")
            );
        }
    }

    public void createGoal(int empId, String desc,
                           Date deadline, String priority,
                           String metrics) throws Exception {

        String sql =
            "INSERT INTO GOALS " +
            "(GOAL_ID, EMP_ID, DESCRIPTION, DEADLINE, PRIORITY, SUCCESS_METRICS, STATUS) " +
            "VALUES (GOAL_SEQ.NEXTVAL, ?, ?, ?, ?, ?, 'PENDING')";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);
        ps.setString(2, desc);
        ps.setDate(3, deadline);
        ps.setString(4, priority);
        ps.setString(5, metrics);
        ps.executeUpdate();
    }

    public void viewMyGoals(int empId) throws Exception {
        String sql =
            "SELECT GOAL_ID, DESCRIPTION, DEADLINE, PRIORITY, STATUS, PROGRESS " +
            "FROM GOALS WHERE EMP_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);
        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- My Goals ---");
        while (rs.next()) {
            System.out.println(
                rs.getInt("GOAL_ID") + " | " +
                rs.getString("DESCRIPTION") + " | " +
                rs.getDate("DEADLINE") + " | " +
                rs.getString("PRIORITY") + " | " +
                rs.getString("STATUS") + " | " +
                rs.getString("PROGRESS")
            );
        }
    }

    public void updateGoalProgress(int goalId, String progress) throws Exception {
        String sql = "UPDATE GOALS SET PROGRESS=? WHERE GOAL_ID=?";
        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setString(1, progress);
        ps.setInt(2, goalId);
        ps.executeUpdate();
    }

 
    public void viewTeamReviews(int managerId) throws Exception {
        String sql =
            "SELECT PR.REVIEW_ID, E.NAME, PR.REVIEW_YEAR, PR.SELF_RATING, PR.STATUS " +
            "FROM PERFORMANCE_REVIEW PR JOIN EMPLOYEE E ON PR.EMP_ID=E.EMP_ID " +
            "WHERE E.MANAGER_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, managerId);
        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- Team Reviews ---");
        while (rs.next()) {
            System.out.println(
                rs.getInt("REVIEW_ID") + " | " +
                rs.getString("NAME") + " | " +
                rs.getInt("REVIEW_YEAR") + " | " +
                rs.getInt("SELF_RATING") + " | " +
                rs.getString("STATUS")
            );
        }
    }

    public void giveManagerFeedback(int reviewId, int rating, String feedback)
            throws Exception {

        String sql =
            "UPDATE PERFORMANCE_REVIEW " +
            "SET MANAGER_RATING=?, MANAGER_FEEDBACK=?, STATUS='REVIEWED' " +
            "WHERE REVIEW_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, rating);
        ps.setString(2, feedback);
        ps.setInt(3, reviewId);
        ps.executeUpdate();
    }

    public void viewManagerFeedback(int empId) throws Exception {
        String sql =
            "SELECT REVIEW_YEAR, MANAGER_RATING, MANAGER_FEEDBACK " +
            "FROM PERFORMANCE_REVIEW WHERE EMP_ID=? AND MANAGER_FEEDBACK IS NOT NULL";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);
        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- Manager Feedback ---");
        while (rs.next()) {
            System.out.println(
                rs.getInt("REVIEW_YEAR") + " | " +
                rs.getInt("MANAGER_RATING") + " | " +
                rs.getString("MANAGER_FEEDBACK")
            );
        }
    }
}
