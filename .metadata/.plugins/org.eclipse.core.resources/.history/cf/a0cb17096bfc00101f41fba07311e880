package com.revworkforce.main;

import com.revworkforce.model.Employee;
import com.revworkforce.ui.LoginUI;

public class RevWorkForceApp {

    public static void main(String[] args) {

        Employee emp = LoginUI.login();

        if (emp != null) {
            System.out.println("Welcome " + emp.getName());

            if ("NEW".equals(emp.getPasswordStatus())) {
                System.out.println(
                  "First time login – please change password");
            }
        }
    }
}
