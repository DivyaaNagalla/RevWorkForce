package com.revworkforce.util;

public class ContactValidator {

    public static void validatePhone(String phone) throws Exception {

        if (phone == null || phone.trim().isEmpty())
            throw new Exception("Phone number cannot be empty");

        if (!phone.matches("[6-9][0-9]{9}"))
            throw new Exception("Invalid phone number. Must be 10 digits and start with 6-9");
    }

    public static void validateEmergencyContact(String emergency,
                                                String phone) throws Exception {

        if (emergency == null || emergency.trim().isEmpty())
            throw new Exception("Emergency contact cannot be empty");

        if (!emergency.matches("[6-9][0-9]{9}"))
            throw new Exception("Invalid emergency contact number");

        if (emergency.equals(phone))
            throw new Exception("Emergency contact cannot be same as phone number");
    }
}
