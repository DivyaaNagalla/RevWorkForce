package com.revworkforce.ui;

import java.util.Scanner;

import com.revworkforce.model.Employee;

public class EmployeePerformanceUI {

    public static void showMenu(Employee emp) {

        Scanner sc = new Scanner(System.in);

        while (true) {

            System.out.println("\n--- Performance Management ---");
            System.out.println("1. Create Performance Review");
            System.out.println("2. View My Goals");
            System.out.println("3. Update Goal Progress");
            System.out.println("4. View Manager Feedback");
            System.out.println("5. Back");
            System.out.print("Choose option: ");

            int choice = sc.nextInt();
            sc.nextLine();

            switch (choice) {

                case 1:
                    System.out.println("Performance review creation – coming soon");
                    pause(sc);
                    break;

                case 2:
                    System.out.println("View goals – coming soon");
                    pause(sc);
                    break;

                case 3:
                    System.out.println("Update goal progress – coming soon");
                    pause(sc);
                    break;

                case 4:
                    System.out.println("Manager feedback – coming soon");
                    pause(sc);
                    break;

                case 5:
                    return;

                default:
                    System.out.println("Invalid choice");
                    pause(sc);
            }
        }
    }

    private static void pause(Scanner sc) {
        System.out.println("\nPress Enter to continue...");
        sc.nextLine();
    }
}
