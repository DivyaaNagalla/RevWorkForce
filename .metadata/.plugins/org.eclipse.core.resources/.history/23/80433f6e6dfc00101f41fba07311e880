package com.revworkforce.service;

public class PasswordValidator {

    public static void validate(String password) throws Exception {

        if (password.length() < 8)
            throw new Exception("Password must be at least 8 characters");

        boolean upper = false, lower = false, digit = false, special = false;

        for (int i = 0; i < password.length(); i++) {
            char ch = password.charAt(i);

            if (Character.isUpperCase(ch)) upper = true;
            else if (Character.isLowerCase(ch)) lower = true;
            else if (Character.isDigit(ch)) digit = true;
            else special = true;
        }

        if (!upper) throw new Exception("Need uppercase letter");
        if (!lower) throw new Exception("Need lowercase letter");
        if (!digit) throw new Exception("Need digit");
        if (!special) throw new Exception("Need special character");
    }
}
