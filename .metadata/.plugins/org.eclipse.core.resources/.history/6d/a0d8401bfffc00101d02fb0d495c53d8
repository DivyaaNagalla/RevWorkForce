package com.revworkforce.ui;

import java.util.Scanner;

import com.revworkforce.model.Employee;
import com.revworkforce.service.EmployeeService;

public class EmployeeMenuUI {

    public static void showMenu(Employee emp, boolean isManager) {

        Scanner sc = new Scanner(System.in);
        EmployeeService service = new EmployeeService();

        while (true) {

            System.out.println("\n--- Employee Menu ---");
            System.out.println("1. View Profile");
            System.out.println("2. Update Profile");
            System.out.println("3. Leave Management");

            if (isManager) {
                System.out.println("4. Manager Leave Menu");
                System.out.println("5. Logout");
            } else {
                System.out.println("4. Logout");
            }

            System.out.print("Choose option: ");
            int choice = sc.nextInt();
            sc.nextLine(); // consume newline

            try {
                if (choice == 1) {

                    ProfileUI.viewProfile(emp);

                    System.out.println("\nPress Enter to continue...");
                    sc.nextLine();
                }

                else if (choice == 2) {

                    ProfileUI.updateProfile(emp);

                    System.out.println("\nPress Enter to continue...");
                    sc.nextLine();
                }

                else if (choice == 3) {

                    EmployeeLeaveUI.showMenu(emp);
                }

                else if (isManager && choice == 4) {

                    ManagerLeaveUI.showMenu(emp);
                }

                else if ((!isManager && choice == 4) ||
                         (isManager && choice == 5)) {

                    System.out.println("Logged out successfully");
                    return;
                }

                else {
                    System.out.println("Invalid choice");
                }

            } catch (Exception e) {
                System.out.println("Error: " + e.getMessage());
                System.out.println("\nPress Enter to continue...");
                sc.nextLine();
            }
        }
    }
}
