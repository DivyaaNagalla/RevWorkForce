package com.revworkforce.ui;

import java.sql.Date;
import java.util.Scanner;
import com.revworkforce.service.PerformanceService;

public class EmployeePerformanceUI {

    public static void showMenu(int empId) {

        Scanner sc = new Scanner(System.in);
        PerformanceService service = new PerformanceService();

        while (true) {
            System.out.println("\n--- Performance Management ---");
            System.out.println("1. Create Performance Review");
            System.out.println("2. Create Goal");
            System.out.println("3. View My Goals");
            System.out.println("4. Update Goal Progress");
            System.out.println("5. View Manager Feedback");
            System.out.println("6. Back");
            System.out.print("Choose option: ");

            int ch = sc.nextInt();
            sc.nextLine();

            try {
                switch (ch) {
                    case 1:
                        System.out.print("Review Year: ");
                        int year = sc.nextInt();
                        sc.nextLine();

                        System.out.print("Key Deliverables: ");
                        String del = sc.nextLine();

                        System.out.print("Accomplishments: ");
                        String acc = sc.nextLine();

                        System.out.print("Improvements: ");
                        String imp = sc.nextLine();

                        System.out.print("Self Rating (1-5): ");
                        int rating = sc.nextInt();
                        sc.nextLine();

                        service.submitReview(empId, year, del, acc, imp, rating);
                        break;

                    case 2:
                        System.out.print("Goal Description: ");
                        String desc = sc.nextLine();

                        System.out.print("Deadline (yyyy-mm-dd): ");
                        Date deadline = Date.valueOf(sc.nextLine());

                        System.out.print("Priority (HIGH/MEDIUM/LOW): ");
                        String priority = sc.nextLine();

                        System.out.print("Success Metrics: ");
                        String metrics = sc.nextLine();

                        service.createGoal(empId, desc, deadline, priority, metrics);
                        break;

                    case 3:
                        service.viewMyGoals(empId);
                        break;

                    case 4:
                        System.out.print("Goal ID: ");
                        int gid = sc.nextInt();
                        sc.nextLine();

                        System.out.print("Progress update: ");
                        String progress = sc.nextLine();

                        service.updateGoalProgress(gid, progress);
                        break;

                    case 5:
                        service.viewManagerFeedback(empId);
                        break;

                    case 6:
                        return;

                    default:
                        System.out.println("Invalid option");
                }
            } catch (Exception e) {
                System.out.println("Error: " + e.getMessage());
            }
        }
    }
}
