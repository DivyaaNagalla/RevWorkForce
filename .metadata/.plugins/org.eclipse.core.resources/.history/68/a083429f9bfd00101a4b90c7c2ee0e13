package com.revworkforce.dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.revworkforce.util.DBUtil;

public class PerformanceDAO {

    public void createReview(int empId,
                             int year,
                             String deliverables,
                             String achievements,
                             String improvements,
                             int rating) throws Exception {

        String sql =
            "INSERT INTO PERFORMANCE_REVIEW " +
            "(REVIEW_ID, EMP_ID, REVIEW_YEAR, KEY_DELIVERABLES, " +
            "ACCOMPLISHMENTS,IMPROVEMENTS, SELF_RATING, STATUS) " +
            "VALUES (REVIEW_SEQ.NEXTVAL, ?, ?, ?, ?, ?, ?, 'SUBMITTED')";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);

        ps.setInt(1, empId);
        ps.setInt(2, year);
        ps.setString(3, deliverables);
        ps.setString(4, achievements);
        ps.setString(5, improvements);
        ps.setInt(6, rating);

        ps.executeUpdate();
    }

    public void viewMyReviews(int empId) throws Exception {

        String sql =
            "SELECT REVIEW_ID, REVIEW_YEAR, SELF_RATING, STATUS " +
            "FROM PERFORMANCE_REVIEW " +
            "WHERE EMP_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, empId);

        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- My Reviews ---");

        while (rs.next()) {
            System.out.println(
                "Review ID: " + rs.getInt("REVIEW_ID") +
                " | Year: " + rs.getInt("REVIEW_YEAR") +
                " | Rating: " + rs.getInt("SELF_RATING") +
                " | Status: " + rs.getString("STATUS")
            );
        }
    }

    
    public void viewTeamReviews(int managerId) throws Exception {

        String sql =
            "SELECT PR.REVIEW_ID, E.NAME, PR.REVIEW_YEAR, PR.SELF_RATING, PR.STATUS " +
            "FROM PERFORMANCE_REVIEW PR " +
            "JOIN EMPLOYEE E ON PR.EMP_ID = E.EMP_ID " +
            "WHERE E.MANAGER_ID = ?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);
        ps.setInt(1, managerId);

        ResultSet rs = ps.executeQuery();

        System.out.println("\n--- Team Performance Reviews ---");

        boolean found = false;

        while (rs.next()) {
            found = true;
            System.out.println(
                "Review ID: " + rs.getInt("REVIEW_ID") +
                " | Employee: " + rs.getString("NAME") +
                " | Year: " + rs.getInt("REVIEW_YEAR") +
                " | Self Rating: " + rs.getInt("SELF_RATING") +
                " | Status: " + rs.getString("STATUS")
            );
        }

        if (!found) {
            System.out.println("No team reviews found");
        }
    }


    public void giveManagerFeedback(int reviewId,
                                    int rating,
                                    String feedback) throws Exception {

        String sql =
            "UPDATE PERFORMANCE_REVIEW " +
            "SET MANAGER_RATING=?, MANAGER_FEEDBACK=?, STATUS='REVIEWED' " +
            "WHERE REVIEW_ID=?";

        PreparedStatement ps = DBUtil.getConnection().prepareStatement(sql);

        ps.setInt(1, rating);
        ps.setString(2, feedback);
        ps.setInt(3, reviewId);

        ps.executeUpdate();
    }
}
