package com.revworkforce.ui;

import java.util.Scanner;
import com.revworkforce.model.Employee;

public class EmployeeMenuUI {

    public static void showMenu(Employee emp) {

        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("\n--- Employee Menu ---");
            System.out.println("1. View Profile");
            System.out.println("2. Edit Profile");
            System.out.println("3. View Leave Balance");
            System.out.println("4. Apply Leave");
            System.out.println("5. View My Leaves");
            System.out.println("6. View Holiday Calendar");
            System.out.println("7. Logout");
            System.out.print("Choose option: ");

            int choice = sc.nextInt();
            sc.nextLine();

            switch (choice) {
                case 1:
                    EmployeeProfileUI.viewProfile(emp);
                    break;
                case 2:
                    EmployeeProfileUI.editProfile(emp);
                    break;
                case 3:
                    LeaveUI.viewLeaveBalance(emp);
                    break;
                case 4:
                    LeaveUI.applyLeave(emp);
                    break;
                case 5:
                    LeaveUI.viewMyLeaves(emp);
                    break;
                case 6:
                    LeaveUI.viewHolidays();
                    break;
                case 7:
                    System.out.println("Logged out");
                    return;
                default:
                    System.out.println("Invalid option");
            }
        }
    }
}
